{
	"name": "BB - Go Gin Microservice Boilerplate",
	// "build": {
	// 	"dockerfile": "Dockerfile"
	// },
	"image": "mcr.microsoft.com/devcontainers/go:1.21-bookworm",
	// "overrideCommand": false,
	// "privileged": false,

	// create "bbnet" network if not exist
	"initializeCommand": "docker network inspect bbnet >/dev/null 2>&1 || docker network create bbnet",
	// add docker --network=bbnet to the run command
	"runArgs": ["--network=bbnet"],
	"postCreateCommand": "./.devcontainer/post-create.sh",
	// "postCreateCommand": "go mod download",
	"customizations": {
		"vscode": {
			"settings": {
				"resmon.show.battery": false,
				"resmon.show.cpufreq": false
			},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"mutantdino.resourcemonitor",
				"ms-vscode.go",
				"golang.go",
				"akamud.vscode-theme-onedark",
				"formulahendry.auto-rename-tag",
				"aaron-bond.better-comments",
				"anseki.vscode-color",
				"ms-azuretools.vscode-docker",
				"editorconfig.editorconfig",
				"mhutchie.git-graph",
				"donjayamanne.githistory",
				"eamodio.gitlens",
				"wix.vscode-import-cost",
				"oderwat.indent-rainbow",
				"ms-vscode.vscode-typescript-next",
				"mkloubert.vscode-kanban",
				"cweijan.vscode-mysql-client2",
				"esbenp.prettier-vscode",
				"rangav.vscode-thunder-client",
				"chakrounanas.turbo-console-log",
				"mtxr.sqltools@0.28.1",
				"mtxr.sqltools-driver-pg@0.5.2"
			]
		}
	},
	"forwardPorts": [8086],
	"portsAttributes": {
		"8086": {
			"label": "Application port",
			"onAutoForward": "silent"
		}
	},
	// "mounts": [
	// 	"source=${localWorkspaceFolder}/,target=/workspace,type=bind,consistency=cached"
	// ],
	"hostRequirements": {
		"memory": "6gb"
	},
	// "runArgs": [
	// 	"-u",
	// 	"vscode",
	// 	"--cap-add=SYS_PTRACE",
	// 	"--security-opt",
	// 	"seccomp=unconfined",
	// 	// map SSH keys for Git
	// 	"-v",
	// 	"${env:HOME}/.ssh:/home/vscode/.ssh:ro"
	// ]
}
